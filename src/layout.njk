<!doctype html>
<html lang="en" data-theme="light">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{ title or "Solutions Log" }}</title>
  <meta name="description" content="{{ description or 'A log of the solutions and decisions I drive as an Engineering Manager — showcasing impact beyond code.' }}" />

  <!-- Pico.css (small, classless/class-light) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.zinc.min.css">

  <!-- Your custom tweaks -->
  <link rel="stylesheet" href="{{ '/assets/styles.css' | url }}" />

  <!-- Pagefind UI -->
  <link rel="stylesheet" href="{{ '/_pagefind/pagefind-ui.css' | url }}">
  <script src="{{ '/_pagefind/pagefind-ui.js' | url }}" defer></script>

  <meta name="theme-color" content="#ffffff" />
</head>
<body>
  <header class="container header">
    <nav>
      <ul>
        <li><strong><a href="{{ '/' | url }}" aria-label="Home">Solutions Log</a></strong></li>
      </ul>
      <ul>
        <li><small>© {{ "now" | date("yyyy") }}</small></li>
      </ul>
    </nav>
    <p class="tagline">
      {{ tagline or "A log of the solutions and decisions I drive as an Engineering Manager — showcasing impact beyond code." }}
    </p>
  </header>

  <main id="main" class="container">
    {{ content | safe }}
  </main>

  <footer class="container footer">
    <small>Built with Eleventy • Search by Pagefind</small>
  </footer>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const el = document.getElementById("search");
      if (el && window.PagefindUI) {
        new PagefindUI({ element: "#search", showSubResults: true, pageSize: 10 });
      }
    });
  </script>
</body>
</html>
